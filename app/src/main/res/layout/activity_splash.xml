<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clinica_7"
    tools:context="com.tecsup.jeferson_bujaico_rodriguez.proyect_clinica.Activities.SplashActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_splash"
            android:layout_gravity="center"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/tv_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenidos a Clinic Cloud"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="29sp"
            android:textColor="@color/colorNegroClaro"/>

        <ProgressBar
            android:id="@+id/pb_splash"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</RelativeLayout>
